// Mixins
animate(name, time, fillmode)
    animation name time fillmode
    -moz-animation name time fillmode
    -webkit-animation name time fillmode
    -o-animation name time fillmode
    -ms-animation name time fillmode

transform(arg)
    transform arg
    -webkit-transform arg
    -moz-transform arg
    -o-transform arg
    -ms-transform arg

// Animation keyframes
@keyframes clock-running-right
    100%
        transform(rotate(180deg))
    23%
        transform(rotate(0deg))
    0%
        transform(rotate(0deg))

@keyframes clock-running-left
    100%
        transform(rotate(-180deg))
    23%
        transform(rotate(-180deg))
    0%
        transform(rotate(-126deg))

@keyframes clock-pointer
    100%
        transform(rotate(-360deg))
    0%
        transform(rotate(-126deg))

/*Animated Clock*/
.countdown > img
    position: absolute
    top: 0
    left: 0
    width: 210px

.pointer > img
    height: 85px
    z-index: 10

.pointer
    position: absolute
    top: 36px
    right: 64px
    padding: 0
    z-index: 100
    transform(rotate(-126deg))

.pointer.run
    animate(clock-pointer, 42s, linear)

div.countdown
    position: absolute
    right: 0
    bottom: 0
    z-index: 100
    /* -webkit-transform-origin: 100% 100% */
    -webkit-transition: all .5s
    -moz-transition: all .5s
    transition: all .5s
    height 163px
    width 177px
    overflow hidden

div.countdown.out
    /* -webkit-transform: rotateY( 90deg )
    opacity: 0.5 */
    right: -10em

div.countdown div.clock
    position: absolute
    top: 45px;
    left: 24px
    height: 10em
    width: 10em
    z-index: -100

div.countdown div.clock div.clock-left,
div.countdown div.clock div.clock-right
    position: absolute
    width: 50%
    left: 0
    top: 0
    bottom: 0
    overflow: hidden

div.countdown div.clock div.clock-right
    -webkit-transform: scaleX(-1)
    -moz-transform: scaleX(-1)

div.countdown div.clock div.half-circle
    position: absolute
    width: 100%
    height: 100%
    background-color: #F04E23
    border-radius: 10em 0 0 10em

    -webkit-transform-origin: 100% 50%
    -moz-transform-origin: 100% 50%
    transform-origin: 100% 50%

div.countdown div.clock-left div.half-circle
    transform(rotate(-126deg))

div.countdown.run div.clock.run div.clock-right div.half-circle
    animate(clock-running-right, 42s, linear)

div.countdown.run div.clock.run div.half-circle
    animate(clock-running-left, 42s, linear)

div.countdown div.clock div.clock-right
    left: 50%
